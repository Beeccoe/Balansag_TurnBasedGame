<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.balansag_turnbasedgame.MainActivity">

    <!--set 100 maximum value for the progress bar-->

    <ImageView
        android:id="@+id/bgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bgimg" />

    <ImageView
        android:id="@+id/skill3ov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green0" />

    <ImageView
        android:id="@+id/dmgov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red0" />

    <ImageView
        android:id="@+id/skill1ov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green0" />

    <ImageView
        android:id="@+id/skill4ov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green0" />

    <ImageView
        android:id="@+id/skill2ov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blue0" />

    <ImageView
        android:id="@+id/protagframe"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtProtagName"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/protagframe" />


    <ImageView
        android:id="@+id/antagframe"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/txtAntagName"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/antagframe" />

    <TextView
        android:id="@+id/txtAntagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antag"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/txtAntagHP"
        app:layout_constraintEnd_toEndOf="@+id/txtAntagHP" />

    <TextView
        android:id="@+id/txtProtagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protag"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/txtProtagHP"
        app:layout_constraintStart_toStartOf="@+id/txtProtagHP" />

    <TextView
        android:id="@+id/txtProtagHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Character HP"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtAntagHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="antag HP"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnNxtTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:background="@drawable/circle"
        android:onClick="onClick"
        android:text="Fight!"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txtCombatLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text=""
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turnCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/protagatk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/antagframe"
        app:layout_constraintEnd_toEndOf="@+id/antagframe"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/antagframe"
        app:layout_constraintTop_toTopOf="@+id/antagframe"
        app:layout_constraintVertical_bias="0.484"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/antagatk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/protagframe"
        app:layout_constraintEnd_toEndOf="@+id/protagframe"
        app:layout_constraintStart_toStartOf="@+id/protagframe"
        app:layout_constraintTop_toTopOf="@+id/protagframe"
        tools:srcCompat="@tools:sample/avatars" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/antagframe"
        app:layout_constraintStart_toStartOf="@id/protagframe">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnSkill1"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="30dp"
                android:background="@null"
                android:clickable="true"
                android:padding="5dp"

                android:scaleType="fitXY"
                android:text="skill1"
                app:srcCompat="@drawable/skillicon1_state"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btnSkill2"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:clickable="false"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:text="skill2"
                app:srcCompat="@drawable/skillicon2_state"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btnSkill3"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:clickable="false"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:text="skill3"
                app:srcCompat="@drawable/skillicon3_state"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btnSkill4"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:clickable="false"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:text="skill4"
                app:srcCompat="@drawable/skillicon4_state"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>